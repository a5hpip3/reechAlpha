<%= simple_form_for @question do |f| %>
<div class="">
	<div class="field">
		<%= f.text_area :post,:rows=>3,:placeholder=>"What do you need help with, #{current_user.first_name}?",
		:class=>"question-status-text"
		%>
	</div>
	<div class="question-status-actions" id="refreshquestions">
	Add Picture: 	
	<input type="file" capture="camera" accept="image/*" id="cameraInput" name="cameraInput">
		
	<%= f.submit "REECH OUT",:class=>"btn btn-info" %>
	</div>
</div>
<% end %>
